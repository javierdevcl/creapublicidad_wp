{# Ensure visibility. #}
{% if product and product.is_visible() %}
	<li class="slide-owl-wrap producto-item">
		{% if post.thumbnail %}
			<div class="px-3 bg-[#f9f9f9]">
				<img src="{{ post.thumbnail.src('woocommerce_single') }}" alt="{{ post.thumbnail.alt }}" class="scale-90 duration-300">
			</div>
		{% endif %}
		<h3 class="text-base text-center font-normal mt-2">{{ post.title }}</h3>
		{% if related_products %}
			<a href="{{ post.link }}" class="boton-cotizar text-center text-[15px] w-full max-w-[190px] mx-auto table uppercase font-semibold border-2 rounded-2xl py-2.5 px-5 my-3 mb-5 text-violet-600 border-violet-600 duration-300 hover:bg-violet-600 hover:text-white">Cotizar Ahora</a>
		{% endif %}
	</li>
{% endif %}
