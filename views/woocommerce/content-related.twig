{# Ensure visibility. #}
{% if product and product.is_visible() %}
	<li class="slide-owl-wrap producto-item">
		<a href="{{ post.link }}">
			{% if post.thumbnail %}
				<div class="px-3 bg-[#f9f9f9]">
					<img src="{{ post.thumbnail.src('woocommerce_single') }}" alt="{{ post.thumbnail.alt }}" class="scale-90 duration-300">
				</div>
			{% endif %}
			<h3 class="text-base text-center font-normal mt-2">{{ post.title }}</h3>
		</a>
	</li>
{% endif %}
