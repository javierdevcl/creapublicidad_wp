{# Ensure visibility. #}
{% if product and product.is_visible() %}
    <li class="bg-white rounded-xl">
		{% if post.thumbnail %}
			<div class="px-3">
				<img src="{{ post.thumbnail.src('woocommerce_single') }}">
			</div>
		{% endif %}
		<h3 class="text-base text-center font-semibold">{{ post.title }}</h3>
		<a href="{{ post.link }}" class="boton-cotizar text-center text-[15px] w-full max-w-[190px] mx-auto table uppercase font-semibold border-2 rounded-2xl py-2.5 px-5 my-3 mb-5 text-violet-600 border-violet-600 hover:bg-violet-600 hover:text-white">Cotizar Ahora</a>
	</li>
{% endif %}
